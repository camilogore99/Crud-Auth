<%- include('../template/head') -%>

   <header class="mb-auto ">
      <div>
         <h3 class="float-md-start mb-0">Taskit</h3>
         <nav class="nav nav-masthead justify-content-center float-md-end">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/registro">Register</a>
         </nav>
      </div>
   </header>
   </div>
   <div class="bg-register">
      <div class="container">
         <h2 class="text-center color-white title-welcome-back">Bienvenido de vuelta!</h2>

         <div class="row login-postion form-login justify-content-center ">

            <div class="col-10 col-md-6  reg-form-area">
               <form action="/login" method="POST">
                  <div class="mb-3">
                     <label for="email">Correo Eléctronico</label>
                     <input id="email" class="form-control" type="email" name="email" required>
                  </div>
                  <div class="mb-3">
                     <label for="password">Contraseña</label>
                     <input id="password" class="form-control" type="password" name="password" required>
                  </div>
                  <button class="btn btn-primary" type="submit">Enviar</button>
               </form>
               <div class="mt-4">
                  <h6>¿Aún no tienes una cuenta? <a href="/registro">Registrate</a></h6>
               </div>
               <div class="mt-2">
                  <a href="/auth/reset-password">¿Olvidaste tu contraseña?</a>
               </div>
            </div>
            <div class="col-8 mt-4 col-md-4 login-postion">
               <a class="btn btn-light custom-gbtn" href='/auth/google'>
                  <i class="bi bi-google"></i> Continuar con Google
               </a>
               <a class="btn btn-light custom-gbtn" href='/auth/facebook'>
                  <i class="bi bi-facebook"></i> Continuar con Facebook
               </a>
            </div>
         </div>
      </div>
   </div>

   <%- include('../template/footer') -%>