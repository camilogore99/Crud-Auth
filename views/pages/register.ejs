<%- include('../template/head') -%>
   <div class="main-login">
      <div class="container">
         <header class="mb-auto ">
            <div>
               <h3 class="float-md-start mb-0">Taskit</h3>
               <nav class="nav nav-masthead justify-content-center float-md-end">
                  <a class="nav-link active" aria-current="page" href="/">Home</a>
                  <a class="nav-link" href="/login">Login</a>
                  <a class="nav-link" href="/registro">Register</a>
               </nav>
            </div>
         </header>
      </div>
      <div class="bg-register ">
         <div class="container ">
            <h2 class="mt-4 text-align color-white title-welcome-back">Unete Hoy!</h2>
            <div class="row row login-postion form-login justify-content-center">
               <div class="col-6 mt-1 col-md-4 login-postion">
                  <a class="btn btn-light custom-gbtn" href='/auth/google'>
                     <i class="bi bi-google"></i> Continuar con Google
                  </a>
                  <a class="btn btn-primary custom-gbtn" href='/auth/facebook'>
                     <i class="bi bi-facebook"></i> Continuar con Facebook
                  </a>
               </div>
               <div class="row justify-content-center">
                  <div class="col-10 col-md-6  reg-form-area">
                     <form class="d-flex flex-column" action="/registro" method="POST">
                        <div class="mb-3">
                           <label class="font-label" for="firstname">Nombre</label>
                           <input class="form-control color-bg-input" type="text" name="firstname">
                        </div>
                        <div class="mb-3">
                           <label class="font-label" for="lastname">Appelido</label>
                           <input class="form-control color-bg-input" type="text" name="lastname">
                        </div>
                        <div class="mb-3">
                           <label class="font-label" for="email">Email</label>
                           <input class="form-control color-bg-input" type="email" name="email">
                        </div>
                        <div class="mb-3">
                           <label class="font-label" for="password">Contraseña</label>
                           <input class="form-control color-bg-input" type="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Registrarme</button>
                     </form>
                     <h6 class="mt-3 color-white">¿Ya tienes una cuenta? <a class="color-links" href="/login">inicia
                           session</a>
                     </h6>
                  </div>
               </div>

            </div>
         </div>
      </div>
   </div>
   <%- include('../template/footer') -%>